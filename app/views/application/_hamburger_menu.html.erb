<div data-controller="dropdown" class="relative">
  <button
    type="button"
    class="flex flex-col justify-between w-10 h-9 p-2 text-white transition hover:bg-white/10 focus-visible:outline focus-visible:outline-2 focus-visible:outline-white/80"
    data-action="dropdown#toggle click@window->dropdown#hide"
    aria-label="メニューを開く">
    <span class="block h-0.5 bg-white rounded"></span>
    <span class="block h-0.5 bg-white rounded"></span>
    <span class="block h-0.5 bg-white rounded"></span>
  </button>
  <div
    data-dropdown-target="menu"
    class="hidden absolute right-0 mt-2 w-56 rounded-md bg-white/95 py-2 text-sm font-medium text-slate-700 ring-1 ring-slate-900/10 z-[999]"
    data-transition-enter-from="opacity-0 translate-y-1"
    data-transition-enter-to="opacity-100 translate-y-0"
    data-transition-leave-from="opacity-100 translate-y-0"
    data-transition-leave-to="opacity-0 translate-y-1">
    <div class="py-1">
      <%= link_to favorites_path,
        class: 'flex items-center px-4 py-2 transition hover:bg-slate-200',
        data: { action: "dropdown#toggle" } do %>
        <span>お気に入り一覧</span>
      <% end %>
      <%= link_to home_path,
        class: 'flex items-center px-4 py-2 transition hover:bg-slate-200',
        data: { action: "dropdown#toggle" } do %>
        <span>ホームに戻る</span>
      <% end %>
    </div>
    <div class="mt-2 border-t border-slate-200 pt-2">
      <%= link_to logout_path,
        class: 'flex items-center px-4 py-2 transition hover:bg-slate-200',
        data: { action: "dropdown#toggle", turbo_method: :delete, turbo_confirm: 'ログアウトしますか？' } do %>
        <span>ログアウト</span>
      <% end %>
    </div>
  </div>
</div>
