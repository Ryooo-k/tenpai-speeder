<div class="relative <%= 'ml-3' if hand.drawn? %>">
  <%= form.radio_button :chosen_hand_id, hand.id, class: "hidden peer" %>
  <%= form.label :chosen_hand_id, value: hand.id, class: "block peer-checked:-translate-y-2" do %>
    <%= image_tag("tiles/#{hand.suit}_#{hand.number}.gif", class: "w-[3.8cqw]") %>
  <% end %>
  <%= form.submit "", class: "absolute inset-0 hidden peer-checked:block" %>
</div>
