<div class="absolute bottom-2 right-2 flex ml-1">
  <% player.melds.each do |meld| %>
    <% klass = meld.from? ? '-rotate-90 origin-bottom translate-x-1/2 -translate-y-1/3' : '' %>
    <div class="w-[3.2cqw] <%= klass %>">
      <%= image_tag("tiles/#{meld.tile.suit}_#{meld.tile.number}.gif") %>
    </div>
  <% end %>
</div>
