<div class="relative w-[4cqw] <%= 'ml-3' if hand.drawn? %>">
  <% tile = hand.tile %>
  <% if @riichi_candidate_ids.include?(hand.id) %>
    <% tile_label = "#{tile.suit}#{tile.number}#{tile.aka? ? '（赤）' : ''}でリーチを宣言" %>
    <%= form.radio_button :chosen_hand_id, hand.id, class: "sr-only peer", aria: { label: tile_label } %>
    <%= form.label :chosen_hand_id, value: hand.id, class: "block cursor-pointer peer-checked:-translate-y-2" do %>
      <%= render partial: "games/mahjong_table/tile", locals: { tile: hand, red: hand.tile.aka?, class_name: "block w-full h-auto" } %>
    <% end %>
    <%= form.submit "", class: "absolute inset-0 hidden cursor-pointer peer-checked:block" %>

  <% else %>
    <div class="relative w-full">
      <%= render partial: "games/mahjong_table/tile", locals: { tile: hand, red: hand.tile.aka?, class_name: "block w-full h-auto grayscale" } %>
      <div class="pointer-events-none absolute inset-0 bg-stone-500/60"></div>
    </div>
  <% end %>
</div>
