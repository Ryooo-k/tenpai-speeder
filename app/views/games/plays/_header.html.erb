<% mode = @game.game_mode %>

<header class="relative overflow-hidden">
  <div class="relative flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
    <div class="flex items-start gap-3">
      <span class="hidden h-12 w-[3px] rounded-full bg-gradient-to-b from-cyan-400 via-sky-400 to-emerald-400 md:block"></span>
      <div class="space-y-1">
        <p class="text-xs font-semibold tracking-[0.15em] text-cyan-200/80">ROUND</p>
        <div class="flex flex-wrap items-baseline gap-3">
          <span class="text-xl font-semibold text-slate-50 tracking-[0.2em]"><%= @game.latest_round.name %></span>
          <span class="text-lg font-medium text-slate-400 tracking-[0.12em]"><%= @game.latest_honba.name %></span>
        </div>
        <p class="text-xs text-slate-400">
          <span class="font-semibold text-slate-200 tracking-[0.12em]"><%= mode&.name || "Game Mode" %></span>
          <% if mode&.description.present? %>
            ï¼š <%= mode.description %>
          <% end %>
        </p>
      </div>
    </div>

    <%= render 'favorites/toggle_frame' %>
  </div>
</header>
