<% mode = @game.game_mode %>

<header class="rounded-3xl border border-slate-800 bg-slate-900/70 p-3 lg:p-5">
  <div class="flex flex-col gap-6 lg:flex-row lg:items-center lg:justify-between">
    <div class="space-y-2">
      <p class="text-lg font-semibold tracking-[0.35em] text-emerald-300">ROUND</p>
      <div class="flex flex-wrap items-baseline gap-3">
        <span class="text-3xl font-semibold"><%= @game.current_round_name %></span>
        <span class="text-xl font-medium tracking-wide text-slate-400"><%= @game.current_honba_name %></span>
      </div>
      <p class="text-lg text-slate-400">
        <span class="font-semibold text-slate-200"><%= mode&.name || "Game Mode" %></span>
        <% if mode&.description.present? %>
          ï¼š <%= mode.description %>
        <% end %>
      </p>
    </div>
  </div>
</header>
