<section class="relative overflow-hidden rounded-2xl border border-slate-800/80 bg-[#090b12]/90 p-6 lg:p-7 shadow-[0_24px_80px_rgba(0,0,0,0.65)] ring-1 ring-cyan-500/10" aria-label="麻雀卓">
  <div class="pointer-events-none absolute inset-0 rounded-2xl bg-[radial-gradient(circle_at_20%_20%,rgba(56,189,248,0.08),transparent_40%),radial-gradient(circle_at_80%_0%,rgba(14,165,233,0.06),transparent_38%)]" aria-hidden="true"></div>
  <div class="relative flex flex-col gap-6">
    <div class="rounded-xl border border-slate-800/80 bg-gradient-to-br from-[#0f1320] via-[#0b0f18] to-[#0c101a] p-4 shadow-inner shadow-cyan-500/5">
      <div class="relative aspect-[4/3] w-full overflow-hidden rounded-lg border border-cyan-500/20 bg-[radial-gradient(circle_at_50%_50%,rgba(56,189,248,0.18),transparent_80%),linear-gradient(180deg,rgba(12,18,28,0.95),rgba(6,8,12,0.95))] @container">
        <%= render partial: "games/mahjong_table/kyoku_status" %>
        <div id="<%= dom_id(@game, :mahjong_table_playfield) %>">
          <%= render partial: "games/mahjong_table/playfield" %>
        </div>
      </div>
    </div>

    <div id="<%= dom_id(@game, :mahjong_table_controls) %>">
      <%= render partial: "games/mahjong_table/controls" %>
    </div>
  </div>
</section>
