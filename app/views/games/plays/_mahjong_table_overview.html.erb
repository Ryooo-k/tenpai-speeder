<% current_player = @game.current_player %>

<section class="rounded-3xl border border-slate-900 bg-slate-900/70 p-6 shadow-xl shadow-emerald-500/10">
  <h2 class="text-xl font-semibold text-emerald-300">Table Overview</h2>
  <div class="mt-5 space-y-4">
    <% @game.players.ordered.each do |player| %>
      <% relation = player.relation_from_user %>
      <% current = (player == current_player) %>
      <div class="group relative flex items-center justify-between gap-3 rounded-2xl border border-slate-800 bg-slate-900/90 px-4 py-4 transition hover:border-emerald-400/40 hover:bg-emerald-500/5">
        <div>
          <p class="text-lg tracking-wide text-slate-400">
            <%= player.wind_name %>
          </p>
          <p class="mt-1 text-xl font-medium text-slate-100">
            <%= player.name %>
            <% if player.user? %>
              <span class="ml-2 inline-flex items-center rounded-full bg-emerald-500/20 px-2 py-0.5 text-[11px] font-semibold uppercase tracking-wide text-emerald-300">You</span>
            <% end %>
          </p>
          <% if player.riichi? %>
            <p class="text-xs font-semibold tracking-wide text-emerald-300">リーチ</p>
          <% end %>
        </div>
        <div class="text-right">
          <p class="text-base tracking-wide text-slate-400">SCORE</p>
          <p class="mt-1 text-2xl font-semibold text-emerald-100">
            <%= number_with_delimiter(player.score) %>
          </p>
          <% if current %>
            <p class="mt-2 inline-flex items-center gap-1 rounded-full border border-emerald-300/40 bg-emerald-400/10 px-3 py-1 text-[11px] font-semibold tracking-[0.2em] text-emerald-200">
              <span class="h-1.5 w-1.5 rounded-full bg-emerald-300 animate-pulse"></span>
              TURN
            </p>
          <% end %>
        </div>
        <div aria-hidden="true" class="pointer-events-none absolute inset-0 rounded-2xl opacity-0 transition group-hover:opacity-100 group-hover:ring-1 group-hover:ring-emerald-400/30"></div>
      </div>
    <% end %>
  </div>
</section>
