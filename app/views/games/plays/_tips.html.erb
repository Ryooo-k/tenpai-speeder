<% player = @game.user_player %>

<section class="rounded-3xl border border-slate-900 bg-slate-900/70 p-6 shadow-xl shadow-emerald-500/10">
  <div class="flex flex-col gap-2">
    <h2 class="text-lg font-semibold text-emerald-300">TIPS</h2>
    <p class="text-xs text-slate-400">
      現在の手牌状況、向聴数を減らすためのヒントなどを表示します。
    </p>
  </div>
  <div class="mt-4 space-y-4">
    <% if player.waiting_wining_tile? %>
      <%= render partial: "games/tips/tenpai_summary" %>
    <% else %>
      <%= render partial: "games/tips/hand_efficiency" %>
    <% end %>
  </div>
</section>
