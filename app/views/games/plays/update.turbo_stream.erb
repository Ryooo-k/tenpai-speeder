<% if @refresh_header %>
  <%= turbo_stream.update dom_id(@game, :header) do %>
    <%= render "games/plays/header" %>
  <% end %>
<% end %>

<% if @non_refresh_kyoku_status %>
  <%= turbo_stream.update dom_id(@game, :mahjong_table_playfield) do %>
    <%= render "games/mahjong_table/playfield" %>
  <% end %>

  <%= turbo_stream.update dom_id(@game, :mahjong_table_controls) do %>
    <%= render "games/mahjong_table/controls" %>
  <% end %>
<% else %>
  <%= turbo_stream.update dom_id(@game, :mahjong_table) do %>
    <%= render "games/plays/mahjong_table" %>
  <% end %>
<% end %>

<%= turbo_stream.update dom_id(@game, :tips) do %>
  <%= render "games/plays/tips" %>
<% end %>
