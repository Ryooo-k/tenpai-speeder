<li class='group relative flex flex-col overflow-hidden rounded-lg border border-cyan-200/15 bg-[#0a0d14]/70 text-left transition-transform duration-300 hover:-translate-y-2 hover:border-cyan-400/30'>
  <%= form_with url: games_path, method: :post, class: 'relative flex h-full w-full flex-col' do |f| %>
    <%= f.hidden_field :game_mode_id, value: game_mode_card.id %>
    <div class='relative z-0 flex flex-1 flex-col p-6'>
      <h2 class='text-2xl font-bold leading-tight text-white'><%= game_mode_card.name %></h2>
      <p class='mt-3 flex-1 text-sm leading-relaxed text-slate-200/85'><%= game_mode_card.description %></p>
    </div>
    <div class='relative z-0 px-6 pb-6'>
      <span class='mx-auto block w-fit max-w-full min-w-[12rem] rounded-2xl bg-gradient-to-r from-cyan-500 via-sky-400 to-emerald-400 px-5 py-3 text-center text-sm font-semibold text-slate-950 transition group-hover:-translate-y-0.5 group-hover:text-slate-900'>
        このモードで始める
      </span>
    </div>
    <button
      type='submit'
      aria-label='<%= "#{game_mode_card.name}モードでゲームを開始する" %>'
      class='absolute inset-0 z-10'>
      <span class='sr-only'><%= "#{game_mode_card.name}モードでゲームを開始する" %></span>
    </button>
  <% end %>
</li>
